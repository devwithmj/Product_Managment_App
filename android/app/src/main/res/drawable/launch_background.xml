<?xml version="1.0" encoding="utf-8"?>
<!-- Custom launch splash screen for Product Management App -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color - will be updated dynamically -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/splash_background" />
        </shape>
    </item>

    <!-- Center logo/icon -->
    <item>
        <bitmap
            android:gravity="center"
            android:src="@mipmap/ic_launcher" />
    </item>

    <!-- Optional: Add app name text below icon -->
    <!-- <item android:gravity="center|bottom" android:bottom="100dp">
        <bitmap android:src="@drawable/app_name_text" />
    </item> -->
</layer-list>
